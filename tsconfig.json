{
  "compilerOptions": {
    "declaration": true,
    "module": "NodeNext",
    "target": "ESNext",
    "outDir": "libs",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "nodenext",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/test": ["test/*"],
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.tsx"]
}
